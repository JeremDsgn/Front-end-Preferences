[user]
name = Jérémy Barbet
email = jeremgraph@gmail.com

[credential]
helper = osxkeychain

[alias]
bi = bisect
st = status
ci = commit -m
ca = commit --amend -m
rh = reset HEAD
cp = cherry-pick
co = checkout
s = submodule
br = branch
rb = rebase
diffs = diff --staged
remotev = remote -v
lg = log --graph --pretty=log --abbrev-commit --date=relative
lga = log --graph --pretty=log --abbrev-commit --date=relative --all

[color]
ui = auto
branch = auto
diff = auto
status = auto
interactive = auto

[pretty]
log = tformat:%Cred%h%Creset -%C(yellow)%d %Creset%s %Cgreen(%an — %cr)%Creset

[core]
editor = nano
excludesfile = ~/.gitignore_global
quotepath = false

[push]
default = tracking

[help]
autocorrect = 1
