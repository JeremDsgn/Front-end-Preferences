[user]
name = Jérémy Barbet
email = jeremgraph@gmail.com

[credential]
helper = osxkeychain

[alias]
bi = bisect
st = status
ci = commit -m
ca = commit --amend -m
rh = reset HEAD
r1 = reset HEAD^1
cp = cherry-pick
co = checkout
sa = stash apply
sd = stash drop
sl = stash list
sp = stash pop
s = submodule
up = pull --rebase
br = branch
rb = rebase
pm = push origin master
rbm = rebase origin/master
rba = rebase --abort
rbc = rebase --continue
rbs = rebase --skip
diffs = diff --staged
wip = "!sh -c 'git add . && git ci "wip"' -"
sync = "!sh -c 'git stash && git up && git stash pop' -"
lg = log --graph --pretty=log --abbrev-commit --date=relative
lga = log --graph --pretty=log --abbrev-commit --date=relative --all

[color]
ui = auto
branch = auto
diff = auto
status = auto
interactive = auto

[pretty]
log = tformat:%Cred%h%Creset -%C(yellow)%d %Creset%s %Cgreen(%an — %cr)%Creset

[core]
editor = nano
excludesfile = ~/.gitignore_global
quotepath = false

[push]
default = tracking

[help]
autocorrect = 1
